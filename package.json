{
  "name": "@angularis",
  "version": "1.0.6",
  "description": "Angular Suite",
  "author": "Lovelidge, Shawn",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build:core": "ng build @angularis/core",
    "build:model": "ng build @angularis/model",
    "build:pipe": "ng build @angularis/pipe",
    "build:service": "ng build @angularis/service",
    "build:directive": "ng build @angularis/directive",
    "build:prebuild": "sync-json -v --property version --source package.json --targets  ./projects/core/package.json ./projects/model/package.json ./projects/pipe/package.json ./projects/service/package.json ./projects/directive/package.json",
    "build": "npm run clean && npm run build:prebuild && npm run build:core && npm run build:model && npm run build:pipe && npm run build:service && npm run build:directive",
    "publish:prepare": "cp .npmrc ./dist/core && cp .npmrc ./dist/model && cp .npmrc ./dist/pipe && cp .npmrc ./dist/service && cp .npmrc ./dist/directive",
    "changeset": "npx changeset add",
    "changeset:version": "npx changeset  version",
    "changeset:version:minor": "changeset version --minor",
    "changeset:version:major": "changeset version --major",
    "changeset:version:patch": "changeset version --patch",
    "storybook": "ng run @angularis/storybook:storybook",
    "storybook:build": "ng run @angularis/storybook:build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
